<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
            <stroke android:width="1dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/colorGray" />

            <solid android:color="@color/colorLight" />

            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
    </item>

</selector>